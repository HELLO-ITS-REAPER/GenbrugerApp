<Window x:Class="GenbrugerApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenbrugerApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="265" Width="250"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBox Name="BrugernavnTxt" Height="35" Width="200"
                 VerticalContentAlignment="Top" HorizontalAlignment="Center"
                 Margin="0,0,0,120" Text="Brugernavn" FontSize="24" GotFocus="BrugernavnTxt_GotFocus"/>
        <PasswordBox Name="KodeordTxt" Height="35" Width="200"
                 VerticalContentAlignment="Top" HorizontalAlignment="Center"
                 Margin="0,0,0,0" Password="Kodeord" FontSize="24" GotFocus="KodeordTxt_GotFocus"/>
        <Button Name="LoginButton" Content="Login" FontWeight="Bold"
                VerticalAlignment="Bottom" Height="40" Width="120"
                Margin="0,0,0,30" FontSize="20" Click="LoginButton_Click"
                Style="{StaticResource ButtonStyle}"/>
    </Grid>
</Window>
